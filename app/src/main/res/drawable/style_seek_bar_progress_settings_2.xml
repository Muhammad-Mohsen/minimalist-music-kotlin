<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- doesn't have a border, has end-side corner radii of 0, and a transparent background -->
	<item
		android:id="@android:id/background"
		android:gravity="fill_vertical|fill_horizontal"
		>

		<shape android:shape="rectangle" >
			<corners
				android:topLeftRadius="@dimen/cornerRadiusLarge"
				android:topRightRadius="0dp"
				android:bottomRightRadius="0dp"
				android:bottomLeftRadius="@dimen/cornerRadiusLarge"
				/>
		</shape>

	</item>

	<item
		android:id="@android:id/progress"
		android:gravity="fill_vertical|fill_horizontal"
		>

		<clip>
			<shape android:shape="rectangle" >
				<solid android:color="@color/seekProgressSettings" />
				<corners
					android:topLeftRadius="@dimen/cornerRadiusLarge"
					android:topRightRadius="0dp"
					android:bottomRightRadius="0dp"
					android:bottomLeftRadius="@dimen/cornerRadiusLarge"
					/>
			</shape>
		</clip>

	</item>

</layer-list>