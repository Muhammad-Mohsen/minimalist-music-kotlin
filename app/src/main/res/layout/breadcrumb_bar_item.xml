<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	>

	<mohsen.muhammad.minimalist.core.ExtendedFrameLayout
		android:id="@+id/crumbButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/spacingSmall"
		app:fillColor="@color/breadcrumbBackground"
		app:rippleColor="@color/breadcrumbForeground"
		app:cornerRadius="@dimen/cornerRadiusSmall"
		>

		<TextView
			android:id="@+id/crumbText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/textLarge"
			android:textColor="@color/breadcrumbForeground"
			tools:text="Directory"
			/>

	</mohsen.muhammad.minimalist.core.ExtendedFrameLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/breadcrumbSeparator"
		android:padding="@dimen/spacingSmall"
		android:textColor="@color/breadcrumbForeground"
		android:textSize="@dimen/textLarge"
		/>

</LinearLayout>
