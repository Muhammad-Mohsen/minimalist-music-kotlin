<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

	<mohsen.muhammad.minimalist.core.ExtendedLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="28dp"
		android:paddingTop="@dimen/spacingMediumLarge"
		android:paddingBottom="@dimen/spacingMediumLarge"
		android:orientation="vertical"
		android:elevation="@dimen/elevationMedium"
		app:fillColor="@color/colorPrimaryDark"
		tools:elevation="0dp"
		>

		<include
			layout="@layout/media_information"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/spacingLarge"
			/>

		<SeekBar
			android:id="@+id/seekBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/spacingMedium"
			android:max="100"
			android:progress="50"
			android:progressDrawable="@drawable/style_seek_bar_progress"
			android:thumb="@drawable/style_seek_bar_thumb"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/spacingLarge"
			android:layout_marginEnd="@dimen/spacingLarge"
			android:orientation="horizontal"
			>

			<!--Seek Text-->
			<TextView
				android:id="@+id/textViewSeek"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="@dimen/textMedium"
				android:textColor="@color/colorOnPrimary"
				android:textStyle="bold"
				android:textAlignment="viewStart"
				android:text="@string/blankTimestamp"
				tools:text="02:35"
				/>

			<!--Seek Text-->
			<TextView
				android:id="@+id/textViewDuration"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="@dimen/textMedium"
				android:textColor="@color/colorOnSecondary"
				android:textAlignment="viewEnd"
				android:text="@string/blankTimestamp"
				tools:text="4:08"
				/>

		</LinearLayout>

	</mohsen.muhammad.minimalist.core.ExtendedLinearLayout>

	<!--Play/Pause-->
	<mohsen.muhammad.minimalist.core.ExtendedImageButton
		android:layout_width="@dimen/imageButtonContainerSize"
		android:layout_height="@dimen/imageButtonContainerSize"
		android:layout_marginEnd="@dimen/spacingMediumLarge"
		android:layout_gravity="end"
		android:padding="@dimen/spacingMediumLarge"
		android:tint="@color/colorPrimary"
		android:scaleType="fitCenter"
		android:src="@drawable/play000"
		android:elevation="@dimen/elevationLarge"
		app:fillColor="@color/colorOnPrimary"
		app:cornerRadius="40dp"
		tools:elevation="0dp"
		/>

</FrameLayout>
