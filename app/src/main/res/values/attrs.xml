<?xml version="1.0" encoding="utf-8"?>

<resources>

	<!--Extended view-->
	<declare-styleable name="ExtendedView">

		<attr name="fillColor" format="color"/>
		<attr name="strokeWidth" format="dimension"/>
		<attr name="strokeDashWidth" format="dimension"/>
		<attr name="strokeDashGap" format="dimension"/>
		<attr name="strokeColor" format="color"/>

		<attr name="rippleColor" format="color"/>

		<attr name="cornerRadiusTopLeft" format="dimension"/>
		<attr name="cornerRadiusTopRight" format="dimension"/>
		<attr name="cornerRadiusBottomRight" format="dimension"/>
		<attr name="cornerRadiusBottomLeft" format="dimension"/>
		<attr name="cornerRadius" format="dimension"/>

	</declare-styleable>

	<!--
		Styleable used to obtain native attributes
		source: https://stackoverflow.com/questions/13719103/how-to-retrieve-style-attributes-programmatically-from-styles-xml
	-->
	<declare-styleable name="androidAttributes">
		<attr name="android:textStyle" />
		<attr name="android:fontFamily" />
		<attr name="android:padding" />
		<attr name="android:paddingTop" />
		<attr name="android:paddingBottom" />
		<attr name="android:paddingStart" />
		<attr name="android:paddingEnd" />
		<attr name="android:lines" />
		<attr name="android:maxLines" />
		<attr name="android:imeOptions" />
		<attr name="android:inputType" />
		<attr name="android:singleLine" />
	</declare-styleable>

</resources>