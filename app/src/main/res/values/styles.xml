<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.DayNight">
		<item name="colorPrimary">@color/mainBackground</item>
		<item name="colorPrimaryDark">@color/mainBackground</item>
		<item name="colorAccent">@color/mainForeground</item>

		<item name="android:background">@color/transparent</item>

		<item name="android:windowLightStatusBar">true</item>
		<item name="android:statusBarColor">@color/mainBackground</item>

		<item name="android:navigationBarColor">@color/mainBackground</item>
		<item name="android:windowLightNavigationBar">true</item>
		<item name="android:textColorPrimary">@color/mainForeground</item>

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<!-- Splash screen theme -->
	<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@drawable/splash</item>
		<item name="android:statusBarColor">@color/alwaysBlack</item>
		<item name="android:navigationBarColor">@color/alwaysBlack</item>
	</style>

	<!-- Scrollbar style for the explorer recycler view -->
	<style name="scrollbarStyle">
		<item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
		<item name="android:scrollbarStyle">outsideOverlay</item>
		<item name="android:scrollbars">vertical</item>
		<item name="android:fadeScrollbars">true</item>
		<item name="android:scrollbarThumbVertical">@drawable/style_scrollbar_thumb</item>
		<item name="android:scrollbarSize">4dp</item>
		<item name="android:scrollbarFadeDuration">800</item>
		<item name="android:scrollbarDefaultDelayBeforeFade">500</item>
	</style>

	<!--FAB (Omni-Play/Pause) style-->
	<style name="floatingButtonOmniStyle">
		<item name="android:layout_width">@dimen/imageButtonContainerSize</item>
		<item name="android:layout_height">@dimen/imageButtonContainerSize</item>
		<item name="android:padding">@dimen/spacingMediumLarge</item>
		<item name="android:tint">@color/alwaysBlack</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:elevation">@dimen/elevationLarge</item>
		<item name="fillColor">@color/alwaysWhite</item>
		<item name="cornerRadius">40dp</item>
	</style>

	<!--Secondary FABs (repeat, shuffle, etc.) style-->
	<style name="floatingButtonSecondaryStyle" parent="floatingButtonOmniStyle">
		<item name="layout_constraintEnd_toEndOf">parent</item>
		<item name="layout_constraintTop_toTopOf">parent</item>
		<item name="layout_constraintCircle">@+id/buttonOmni</item>
		<item name="layout_constraintCircleRadius">0dp</item>
		<item name="android:outlineProvider">none</item>
	</style>

	<!--FAB (Omni-Play/Pause) style-->
	<style name="floatingButtonOmniStyle2">
		<item name="android:layout_width">@dimen/imageButtonContainerSize2</item>
		<item name="android:layout_height">@dimen/imageButtonContainerSize2</item>
		<item name="android:padding">@dimen/spacingMediumLarge</item>
		<item name="android:scaleType">fitCenter</item>
	</style>

</resources>
